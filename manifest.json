{
  "manifest_version": 2,
  "name": "Washoe",
  "version": "1.0.3",
  "applications": {
    "gecko": {
      "id": "washoe@streltsov.com"
    }
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "content_scripts/content.js",
        "content_scripts/createModal.js",
        "content_scripts/createCard.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "background/background.js",
      "background/menu.js"
    ]
  },
  "permissions": ["tabs", "menus", "storage"]
}
