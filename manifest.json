{
  "manifest_version": 2,
  "name": "Washoe",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_scripts/content.js", "content_scripts/showModal.js"]
    }
  ],
  "background": {
    "scripts": [
      "background_scripts/background.js",
      "background_scripts/menu.js"
    ]
  },
  "permissions": ["tabs", "menus", "storage"]
}
